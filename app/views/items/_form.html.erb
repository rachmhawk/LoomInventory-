<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.select(:product_id, Product.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
    <%#= f.fields_for :product do |product_form| %>
      <%#= product_form.text_field :name %>
      <%#= product_form.text_field :sku %>
    <%# end %>
  </div>

  <div class="field">
    <%= f.label :fabric_id %>
    <%= f.select(:fabric_id, Fabric.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
  </div>

  <div class="field">
    <%= label_tag "How Many?" %>
    <%= number_field_tag :quantity, min: 0 %>
    <%#=  number_field_tag "#{thing}", :quantity, min: 0, placeholder: 0 %>
  </div>

  <div class="field">
    <%= label_tag 'Notes' %><br>
    <%= text_area_tag :notes %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
